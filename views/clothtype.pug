extends layout

block content 
  h1.display-4.m-b-2 Add CLOTH TYPE
  div(ng-controller="typeCtrl") 
    p Click here for Add Products :  
      a.btn.btn-secondary(href="/") Add Product
    
    div.form-group
      label Cloth Type:
      input.form-control(type='text' ng-model="clothtype" id="clothtype")
    div.form-group
      label Description :
      textarea.form-control(row=5 ng-model="clothdesc" id="clothdesc")
    div.row
      div.col-lg-6.col-md-6.col-sm-6
          button.btn.btn-primary(type='button' ng-click="clothtypeAdd()") Add Clothtype
      div.col-lg-6.col-md-6.col-sm-6 
